{{#each erros}}

<div class="alert alert-danger ">{{texto}}</div>

{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h3>Editar postagem</h3>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" value="{{postagens._id}}" name="id">

            <label for="titulo">Editar Titulo:</label>
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagens.titulo}}">

            <label for="slug">Editar Slug:</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagens.slug}}">

            <label for="descricao">Editar Descrição:</label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagens.descricao}}">

            <label for="conteudo">Editar Conteúdo:</label>
            <textarea class="form-control" name="conteudo" id="conteudo" >{{postagens.conteudo}}</textarea>

            <label for="categoria">Editar Categoria:</label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                 <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button class="btn btn-success mt-2" type="submit">Editar postagem</button>
        </form>
    </div>
</div>